{% extends 'base.html.twig' %}

{% block body %}

    {% for job in jobs %}
        <div class="card border-primary m-5 shadow">
            <div class="card-header">
                <h2 class="my-3 text-primary">{{ job.title }}</h2>
            </div>
            <div class="card-body d-flex justify-content-between align-items-center">
                <p class="card-text">{{ job.description }}</p>
                <a class="btn btn-outline-primary" href="{{ path('job_details', {'id': job.id}) }}">Details</a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
