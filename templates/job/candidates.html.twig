{% extends 'base.html.twig' %}

{% block body %}

	{% if candidates %}
		{% for candidate in candidates %}
			<div class="card border-primary m-5 shadow">
				<div class="card-header">
					<h2 class="my-3 text-primary">{{ candidate.lastName }}</h2>

				</div>
				<div class="card-body d-flex justify-content-between align-items-center">
					<p class="card-text">{{ candidate.firstName }}</p>
				</div>
			</div>
		{% endfor %}
	{% else %}
		<p>Vous n'avez pas de candidatures</p>
	{% endif %}


{% endblock %}
